extends layout

block content
  div.col-sm-8.col-sm-offset-2
    if(message.length != 0)
      div.alert-danger.alert #{message}

    h1 Signup
    hr

    form(action='/signup', method='post')
      div.form-group
        label Email
        input(type='email', class='form-control', name='email')

      div.form-group
        label Password
        input(type='password', class='form-control', name='password')

      div
        input(type='submit', class='form-control', value='Submit')

    hr
    span.fa.fa-sign-in Already have an acccount?
    a(href='/login')  Login