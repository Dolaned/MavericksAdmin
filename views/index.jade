extends layout

block content
  h3 Recent Movie Searches
  div.row
    if(found == true)
      each movie, i in movies
          div.col-lg-3
            a(href='post?id=#{movie.imdbID}')
              if movie.Poster == 'N/A' || movie.Poster == ''
                img(src="img/na.jpg", class="img-thumbnail boxHits", width="290", height="200", alt="#{movie.Title}")
              else
                img(src="#{movie.Poster}", class="img-thumbnail boxHits", width="290", height="200", alt="#{movie.Title}")
            h3.text-center(style="padding-bottom:20px;height:75px;") #{movie.Title}
    else
      div.col-md-12
        p There are no recently searched movies to display.

