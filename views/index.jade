extends layout

div.modal.hide(id="myModal")
    .modal-header
        button(type="button", class="close", data-dismiss="modal") x
        h3 Modal Header
    .modal-body
        p One fine body...
    .modal-footer

block content
  div.row
    each movie, i in movies
        div.col-lg-3
          a(href='#')
          img(src="#{movie.Poster}", class="img-thumbnail boxHits", width="290", height="200", alt="Image Title")
          h3.text-center(style="padding-bottom:20px;") #{movie.Title}
          a.btn(data-toggle="modal", href="#myModal") Launch


script(src='http://code.jquery.com/jquery-3.1.1.min.js', type='text/javascript')
script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js' type='text/javascript')